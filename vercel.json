{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist/spa",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "netlify/functions/api.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ]
}
